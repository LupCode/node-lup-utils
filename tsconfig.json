{
  "compilerOptions": {
    "outDir": "./lib",
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "strict": true,
    "target": "ES2022",
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}